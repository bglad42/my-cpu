module flagregisters (zero_in, negative_in, overflow_in, carryout_in, zero, negative, overflow, carryout, clk, reset);

	input logic zero_in, negative_in, overflow_in, carryout_in, clk, reset;
	output logic zero, negative, overflow, carryout;
	
	logic neg_temp, zero_temp, over_temp, carry_temp;
	
	mux2_1 negative_register (.out(negative), .i0(), i1(), .sel());
	mux2_1 overflow_register (.out(overflow), .i0(), i1(), .sel());
	mux2_1 zero_register		 (.out(zero), 		.i0(), i1(), .sel());
	mux2_1 carryout_register (.out(carryout), .i0(), i1(), .sel());
	
	D_FF theNegative (.q(neg_temp), .d(negative), .clk, .reset);
	D_FF theOverflow (.q(over_temp), .d(overflow), .clk, .reset);
	D_FF theZero	  (.q(zero_temp), .d(zero),	  .clk, .reset);
	D_FF theCarryout (.q(carry_temp), .d(carryout), .clk, .reset);
endmodule 